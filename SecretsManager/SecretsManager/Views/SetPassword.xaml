<Window x:Class="SecretsManager.Views.SetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecretsManager.Views"
        mc:Ignorable="d"
        Title="SetPassword" Height="250" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBlock Margin="20,10,10,10">
            Note that strong password should contain <LineBreak/> at least  capital letter, number, non <LineBreak/> alphanumeric character and be 32 characters <LineBreak/> long.
        </TextBlock>
        <StackPanel Margin="80">
            <TextBlock>Set your password here.</TextBlock>
            <PasswordBox Name="SPWPasswordBox" KeyDown="SPWPasswordBox_KeyDown"></PasswordBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10 150 10 10">
            <Button Margin="15 10 70 15" Width="50" Height="20" Name="SPWCancel" Click="SPWCancel_Click">Cancel</Button>
            <Button Margin="70 10 50 15" Width="50" Height="20" Name="SPWOK" Click="SPWOK_Click">OK</Button>
        </StackPanel>

    </Grid>
</Window>
